import pandas as pd

# Assuming new_values and base_period are your dataframes and 'A3' corresponds to a specific column in new_values
# Replace 'A3' with the actual column name, for example, 'id'

# Merge dataframes
merged_df = new_values.merge(base_period[['N']], left_on='A3', right_on='N', how='left', indicator=True)

# Apply conditional logic
merged_df['new_column'] = merged_df['_merge'].apply(lambda x: "doesn't exist, new" if x == 'left_only' else "exist")

# Drop the '_merge' column if not needed
