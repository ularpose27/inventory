# --- Step 1: Request Excel file path from user ---

import os

# Ask the user for the full path to the Excel file
file_path = input("Please enter the full path of the Excel file you'd like to extract data from:\n> ")

# Validate that the file exists and is an Excel file
if not os.path.exists(file_path):
    raise FileNotFoundError(f"❌ The file was not found at the specified location: {file_path}")

if not (file_path.endswith(".xlsx") or file_path.endswith(".xls")):
    raise ValueError("⚠️ The provided file must be an Excel file (.xlsx or .xls)")

print(f"✅ File found! Proceeding to extract data from: {file_path}")
