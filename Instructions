Dim prefList As String

prefList = ""
For i = 1 To n
    If prefList = "" Then
        prefList = CStr(i)
    Else
        prefList = prefList & "," & CStr(i)
    End If
Next i

With ws.Range("G13:G" & (12 + n)).Validation
    .Delete
    .Add Type:=xlValidateList, AlertStyle:=xlValidAlertStop, _
         Operator:=xlBetween, Formula1:=prefList
    .IgnoreBlank = True
    .InCellDropdown = True
    .ShowInput = True
    .ShowError = True
    .ErrorTitle = "Invalid Input"
    .ErrorMessage = "Please select a number between 1 and " & n & "."
End With

' Copy same formatting as the legal Ranking column
ws.Range("G13:G" & (12 + n)).Interior.Color = ws.Range("F13").Interior.Color
