import pandas as pd

# Load the Excel file and the specific sheet, skipping the first row
df = pd.read_excel('HFS.xlsx', sheet_name='April 30', skiprows=1)

# Initialize the 'Category' column with NaN values
df['Category'] = pd.NA

# Variable to store the current category
category = None

# Iterate over DataFrame rows to determine and set the 'Category' based on conditions
for index, row in df.iterrows():
    if pd.isna(row['Facility Id']) and pd.notna(row['Status / Customer Name']):
        category = row['Status / Customer Name']
    if pd.notna(row['Facility Id']):
        df.at[index, 'Category'] = category

# Keep only the specified columns
df = df[['Category', 'Status / Customer Name', 'Facility Id']]

# Display the resulting DataFrame
print(df)
