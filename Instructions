'Drop down (Ranking in column E)
Dim sep As String
sep = Application.International(xlListSeparator)   'comma or semicolon depending on Excel locale

With ws.Range("E13:E" & (12 + n))
    .UnMerge                       'IMPORTANT: avoid validation error on merged cells
    .Validation.Delete
    .Validation.Add Type:=xlValidateList, AlertStyle:=xlValidAlertStop, _
                    Formula1:="1" & sep & "2" & sep & "3"
    .Validation.IgnoreBlank = True
    .Validation.InCellDropdown = True
    .Validation.ShowInput = True
    .Validation.ShowError = True
    .Validation.ErrorTitle = "Invalid Input"
    .Validation.ErrorMessage = "Please select a number from the list."
End With
