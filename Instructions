# Calculate the difference between the last two columns for rows 3 to 12 (0-based index: 2 to 11)
df_trend_combined.iloc[2:12, -1] = df_trend_combined.iloc[2:12, -2] - df_trend_combined.iloc[2:12, -3]

# Display the modified dataframe to verify the changes
import ace_tools as tools; tools.display_dataframe_to_user(name="Modified DataFrame", dataframe=df_trend_combined)
