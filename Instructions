# Cell 2 â€“ Ask user for path to the .xlsm file (NO pathlib)

import os

file_path = input("Enter full path to the .xlsm file: ").strip()

# Check correct extension
if not file_path.lower().endswith(".xlsm"):
    raise ValueError("The file must be an .xlsm (macro-enabled Excel) file.")

# Check file exists
if not os.path.isfile(file_path):
    raise FileNotFoundError(f"File not found: {file_path}")

print(f"File selected: {file_path}")
